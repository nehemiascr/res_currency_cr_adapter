<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_settings" model="ir.ui.view">
        <field name="name">Configuraciones de Consulta de Tipo de Cambio</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="BCCR" string="BCCR" data-key="res_currency_cr_adapter" groups="account.group_account_manager">

                    <group string="Consulta BCCR" name="consulta_bccr">
                        
                        <div>
                            <label for="bccr_indicador_compra" />
                            <field name="bccr_indicador_compra" class="oe_inline"/>
                            <br/>
                            <label for="bccr_indicador_venta" />
                            <field name="bccr_indicador_venta" class="oe_inline"/>
                            <br/><label for="bccr_usuario" />
                            <field name="bccr_usuario" class="oe_inline"/>
                            <br/><label for="bccr_token" />
                            <field name="bccr_token" class="oe_inline"/>
                            <br/>
                        </div>
                        
                    </group>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'res_currency_cr_adapter'}</field>
    </record>

     <menuitem id="menu_res_currency_adapter_global_settings" name="Settings"
            parent="account.menu_finance_configuration" sequence="0" action="action_config_settings" groups="base.group_system"/>

</odoo>
